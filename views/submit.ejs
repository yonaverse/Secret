<%- include('partials/header') %>

<div class="submit-secret-page min-vh-100 d-flex align-items-center py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card submit-card border-0 shadow-lg">
          <div class="card-body p-5">
            <div class="text-center mb-5">
              <div class="icon-container mb-4">
                <i class="fas fa-key key-icon"></i>
                <div class="icon-glow"></div>
              </div>
              <h1 class="display-4 mb-3">Share Your Secret</h1>
              <p class="lead text-muted mb-0">Your secret is safe here. Share it anonymously with the world.</p>
            </div>

            <form action="/submit" method="POST" class="secret-form">
              <div class="form-group mb-4">
                <textarea 
                  class="form-control secret-input" 
                  name="secret" 
                  rows="4"
                  placeholder="What's your secret? Share it anonymously..."
                  required
                ></textarea>
                
              </div>

              <div class="d-flex justify-content-center gap-3">
                <a href="/secrets" class="btn btn-outline-secondary btn-lg px-4">
                  <i class="fas fa-arrow-left me-2"></i> Go Back
                </a>
                <button type="submit" class="btn btn-primary btn-lg px-4">
                  <i class="fas fa-paper-plane me-2"></i> Share Secret
                </button>
              </div>
            </form>

            <div class="text-center mt-5">
              <div class="privacy-badges d-flex justify-content-center gap-4">
                <div class="privacy-badge">
                  <i class="fas fa-user-secret mb-2"></i>
                  <span>Anonymous</span>
                </div>
                <div class="privacy-badge">
                  <i class="fas fa-lock mb-2"></i>
                  <span>Secure</span>
                </div>
                <div class="privacy-badge">
                  <i class="fas fa-shield-alt mb-2"></i>
                  <span>Protected</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
